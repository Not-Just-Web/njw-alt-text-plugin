{
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
